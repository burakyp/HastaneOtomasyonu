<Window x:Class="v20.DoktorGirisi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:v20"
        mc:Ignorable="d"
        Title="DoktorGirisi" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Image/hosarkaplan.png"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="5,5,75,5" Background="#7F5AA2C8" >
            <TextBlock FontSize="30" HorizontalAlignment="Center"  Margin="10" FontStyle="Italic">
                <TextBlock.Background>
                    <ImageBrush/>
                </TextBlock.Background>Doktor Giriş</TextBlock>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock  Foreground="Black" FontSize="20" Width="120" Height="30">Kullanıcı Ad:</TextBlock>
                <TextBox  x:Name="TbDoktorTc"  Padding="3" FontSize="15" Width="130" Height="30"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Foreground="Black" FontSize="20" Width="120" Height="30">Şifre:</TextBlock>
                <TextBox x:Name="TbDoktorSifre"  Padding="3" FontSize="15" Width="130" Height="30"></TextBox>
            </StackPanel>
            <Button x:Name="BtnDoktorGiri"  Background="White" Width="250" Height="30" Margin="10" FontSize="20" FontStyle="Italic" Click="BtnDoktorGiri_Click" >Giriş yap</Button>
        </StackPanel>

    </Grid>
</Window>
