<Window x:Class="v20.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:v20"
        mc:Ignorable="d"
        Title="Login Panel" Height="450" Width="800" >
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="/Image/hosarkaplan.png"/>
        </Grid.Background>

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,0,50,0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Background="#7F5AA2C8" >
                <TextBlock FontSize="30" HorizontalAlignment="Center"  Margin="10" FontStyle="Italic">
                    <TextBlock.Background>
                        <ImageBrush/>
                    </TextBlock.Background>Giriş</TextBlock>
                <StackPanel Orientation="Horizontal" Margin="10">
                    <TextBlock  Foreground="Black" FontSize="20" Width="120" Height="30">Kullanıcı Adı:</TextBlock>
                    <TextBox  x:Name="TbPosta"  Padding="3" FontSize="15" Width="130" Height="30"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10">
                    <TextBlock Foreground="Black" FontSize="20" Width="120" Height="30">Şifre:</TextBlock>
                    <TextBox x:Name="TbSifre"  Padding="3" FontSize="15" Width="130" Height="30"></TextBox>
                </StackPanel>
                <Button x:Name="BtnGiris"  Background="White" Width="250" Height="30" Margin="10" FontSize="20" FontStyle="Italic" Click="BtnGiris_Click">Giriş yap</Button>
                <Button x:Name="BtnKayıt"  Background="White" Width="250" Height="30" Margin="10,0,10,10" FontSize="20" FontStyle="Italic" Click="BtnKayıt_Click" >Kayıt Ol</Button>
                <Button x:Name="BtnDoktorGirisi"  Background="White" Width="250" Height="30" Margin="10,0,10,10" FontSize="20" FontStyle="Italic" Click="BtnDoktorGirisi_Click" >Doktor Girişi</Button>
            </StackPanel>
           
        </StackPanel>

       

    </Grid>
</Window>
